[Unit]
Description=Rails Service
Requires=network.target
 
[Service]
Type=simple
Environment=RAILS_ENV=production
PIDFile=/data/apps/rails/rails.pid
WorkingDirectory=/data/apps/rails/myrails
ExecStart=/data/apps/rails/myrails/bin/rails s -p {{ruby_applications_rails.port}} -b 0.0.0.0
TimeoutSec=30
RestartSec=15s
Restart=always
 
[Install]
WantedBy=multi-user.target